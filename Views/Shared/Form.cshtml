@model TPLOCAL1.Models.Form

<! DOCTYPE html>
<html>
    <head>
        <title>Formulaire</title>
        <link rel="stylesheet" href="~/resources/Index.css" />
    </head>
    <body>
        <header>
            <img src="~/resources/GroupeHN.png" class="image" alt="GroupeHN" />
            <h1>Formulaire TP HN avis</h1>
        </header>
        <nav>
            <ul>
                <li><a href="/Home/Index">Accueil</a></li>
                <li><a href="/Home/Index/AvisList">Liste avis</a></li>
            </ul>
        </nav>
        <form asp-action="Form">
            <table class="table">
                <caption align="top">
                    Informations personnelles
                </caption>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <tr>
                    <td>Nom</td>
                    <td><input asp-for="Nom" class="form-control" />
                        <span asp-validation-for="Nom" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td>Prenom</td>
                    <td>
                        <input asp-for="Prenom" class="form-control" />
                        <span asp-validation-for="Prenom" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td>Genre</td>
                    <td>
                        <input asp-for="Genre" class="form-control" />
                        <span asp-validation-for="Genre" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td>Adresse</td>
                    <td>
                        <input asp-for="Adresse" class="form-control" />
                        <span asp-validation-for="Adresse" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td>Code Postal</td>
                    <td>
                        <input asp-for="Cp" class="form-control" />
                        <span asp-validation-for="Cp" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td>Ville</td>
                    <td>
                        <input asp-for="Ville" class="form-control" />
                        <span asp-validation-for="Ville" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </td>
                </tr>
            </table>
            <table class="table">
                <caption align="top">
                    Informations formation suivie
                </caption>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <tr>
                    <td>Date</td>
                    <td>
                        <input asp-for="Date" class="form-control" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td>Formation</td>
                    <td>
                        <input asp-for="Formation" class="form-control" />
                        <span asp-validation-for="Formation" class="text-danger"></span>
                    </td>
                </tr>
            </table>
            <table class="table">
                <caption align="top">
                    Avis sur la formation
                </caption>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <tr>
                    <td>Formation Cobol</td>
                    <td>
                        <input asp-for="Opinion" class="form-control" />
                        <span asp-validation-for="Opinion" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td>Formation C#</td>
                    <td>
                        <input asp-for="Opinion" class="form-control" />
                        <span asp-validation-for="Opinion" class="text-danger"></span>
                    </td>
                </tr>
            </table>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </body>
</html>
